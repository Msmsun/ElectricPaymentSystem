.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  box-sizing: border-box;
}

/* 顶部欢迎区域 */
.header-section {
  margin-bottom: 40rpx;
}

.welcome-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
  margin-bottom: 20rpx;
}

.welcome-text {
  flex: 1;
}

.greeting {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.username {
  font-size: 40rpx;
  font-weight: 700;
  color: #333;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.welcome-icon {
  font-size: 60rpx;
  margin-left: 20rpx;
}

/* 公告区域 */
.notice-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 24rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.notice-icon {
  font-size: 32rpx;
  margin-right: 20rpx;
}

.notice-content {
  flex: 1;
}

.notice-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

/* 四大功能板块 */
.grid-container {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.grid-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.grid-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
  transform: translateX(-100%);
  transition: transform 0.6s ease;
}

.grid-item:active {
  transform: translateY(-4rpx) scale(0.98);
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.15);
}

.grid-item:active::before {
  transform: translateX(100%);
}

.item-icon {
  font-size: 48rpx;
  margin-right: 24rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  background: rgba(102, 126, 234, 0.1);
}

.bill-section .item-icon {
  background: rgba(52, 152, 219, 0.1);
  color: #3498db;
}

.usage-section .item-icon {
  background: rgba(46, 204, 113, 0.1);
  color: #2ecc71;
}

.profile-section .item-icon {
  background: rgba(155, 89, 182, 0.1);
  color: #9b59b6;
}

.ai-section .item-icon {
  background: rgba(231, 76, 60, 0.1);
  color: #e74c3c;
}

.item-content {
  flex: 1;
}

.item-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.item-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.3;
}

.item-arrow {
  font-size: 32rpx;
  color: #999;
  font-weight: 300;
  transition: transform 0.3s ease;
}

.grid-item:active .item-arrow {
  transform: translateX(8rpx);
}

/* 底部统计信息 */
.stats-section {
  margin-top: 20rpx;
}

.stats-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-around;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-number {
  font-size: 48rpx;
  margin-bottom: 12rpx;
  display: block;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 20rpx;
  }
  
  .grid-container {
    gap: 16rpx;
  }
  
  .grid-item {
    padding: 30rpx 24rpx;
  }
  
  .item-icon {
    font-size: 40rpx;
    width: 70rpx;
    height: 70rpx;
    margin-right: 20rpx;
  }
  
  .item-title {
    font-size: 28rpx;
  }
  
  .item-desc {
    font-size: 22rpx;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.welcome-card,
.grid-item,
.stats-card {
  animation: fadeInUp 0.6s ease forwards;
}

.grid-item:nth-child(1) { animation-delay: 0.1s; }
.grid-item:nth-child(2) { animation-delay: 0.2s; }
.grid-item:nth-child(3) { animation-delay: 0.3s; }
.grid-item:nth-child(4) { animation-delay: 0.4s; }
.stats-card { animation-delay: 0.5s; } 