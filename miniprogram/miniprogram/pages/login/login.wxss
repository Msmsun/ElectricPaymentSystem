.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
}

/* 连接状态指示器样式 */
.connection-status {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  width: 100%;
  max-width: 600rpx;
}

.status-indicator {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.status-indicator.checking {
  color: #f39c12;
}

.status-indicator.failed {
  color: #e74c3c;
}

.status-icon {
  font-size: 32rpx;
}

.status-text {
  font-size: 28rpx;
  font-weight: 500;
}

.retry-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.retry-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 40rpx;
  text-align: center;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  letter-spacing: 4rpx;
}

.login-form {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 30rpx;
  padding: 60rpx 40rpx;
  width: 100%;
  max-width: 600rpx;
  box-shadow: 0 16rpx 64rpx rgba(0, 0, 0, 0.15);
  backdrop-filter: blur(20rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.logo {
  text-align: center;
  margin-bottom: 60rpx;
}

.logo-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.input {
  width: 100%;
  height: 90rpx;
  margin-bottom: 30rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 45rpx;
  font-size: 30rpx;
  background: white;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 8rpx rgba(102, 126, 234, 0.1);
}

.btn {
  width: 100%;
  height: 90rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.btn:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.captcha-bar {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  gap: 20rpx;
}

.captcha-input {
  flex: 1;
  height: 90rpx;
  padding: 0 30rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 45rpx;
  font-size: 30rpx;
  background: white;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.captcha-input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 8rpx rgba(102, 126, 234, 0.1);
}

.captcha-container {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  cursor: pointer;
  width: 100px;
  height: 40px;
}

.captcha-img {
  width: 100px;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  background-color: #f5f5f5;
  flex-shrink: 0;
}

.captcha-img:active {
  border-color: #667eea;
  box-shadow: 0 0 0 8rpx rgba(102, 126, 234, 0.1);
}

.captcha-tip {
  font-size: 10px;
  color: #999;
  margin-top: 2px;
  text-align: center;
}

.register-link {
  text-align: center;
  margin-top: 30rpx;
}

.register-link text {
  color: #667eea;
  font-size: 28rpx;
  text-decoration: underline;
} 