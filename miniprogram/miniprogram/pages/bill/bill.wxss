.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 30rpx;
  box-sizing: border-box;
}

.selected-status {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  gap: 15rpx;
}

.status-label {
  color: #667eea;
  font-weight: 600;
  font-size: 28rpx;
}

.status-value {
  color: #667eea;
  font-weight: 600;
  font-size: 28rpx;
  background: linear-gradient(45deg, #667eea, #764ba2);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
}

.search-form {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.form-item {
  margin-bottom: 25rpx;
}

.label {
  display: block;
  font-weight: 600;
  color: #333;
  margin-bottom: 15rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 40rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
  background: white;
  transition: all 0.3s ease;
  box-sizing: border-box;
}

.input:focus {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.picker {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: white;
  transition: all 0.3s ease;
}

.picker:active {
  border-color: #667eea;
  box-shadow: 0 0 0 6rpx rgba(102, 126, 234, 0.1);
}

.picker-text {
  color: #333;
  font-size: 28rpx;
}

.form-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 30rpx;
}

.btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.btn-primary:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.btn-reset {
  background: white;
  color: #667eea;
  border: 2rpx solid #667eea;
}

.btn-reset:active {
  background: #667eea;
  color: white;
}

.user-info {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.info-item {
  display: flex;
  margin-bottom: 15rpx;
  align-items: center;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-weight: 600;
  color: #333;
  width: 120rpx;
  font-size: 28rpx;
}

.info-value {
  color: #667eea;
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
}

.bill-list {
  margin-bottom: 30rpx;
}

.bill-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
  position: relative;
  overflow: hidden;
  transition: all 0.3s ease;
}

.bill-item::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(45deg, #667eea, #764ba2);
}

.bill-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15);
}

.bill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.bill-id {
  font-weight: 600;
  color: #333;
  font-size: 28rpx;
}

.bill-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.status-unpaid {
  background: linear-gradient(45deg, #ff9a9e, #fecfef);
  color: #d63031;
}

.status-paid {
  background: linear-gradient(45deg, #a8edea, #fed6e3);
  color: #00b894;
}

.bill-content {
  margin-bottom: 20rpx;
}

.bill-row {
  display: flex;
  margin-bottom: 12rpx;
  align-items: center;
}

.bill-row:last-child {
  margin-bottom: 0;
}

.bill-label {
  font-weight: 600;
  color: #333;
  width: 120rpx;
  font-size: 26rpx;
}

.bill-value {
  color: #666;
  flex: 1;
  font-size: 26rpx;
}

.bill-cost {
  color: #e74c3c;
  font-weight: 600;
  flex: 1;
  font-size: 26rpx;
}

.bill-actions {
  text-align: right;
  margin-top: 15rpx;
}

.pay-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 25rpx;
  padding: 15rpx 30rpx;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
  transition: all 0.3s ease;
}

.pay-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(102, 126, 234, 0.3);
}

.pay-btn-disabled {
  background: #f5f5f5;
  color: #999;
  box-shadow: none;
}

.pay-btn-disabled:active {
  transform: none;
  box-shadow: none;
}

.no-data {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 80rpx 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.no-data text {
  color: #999;
  font-size: 28rpx;
}

.loading {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 80rpx 30rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10rpx);
  border: 1px solid rgba(255, 255, 255, 0.2);
}

.loading text {
  color: #667eea;
  font-size: 28rpx;
  font-weight: 500;
} 